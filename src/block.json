{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "ph/search-modal",
	"version": "1.0.1",
	"title": "Search Modal Block",
	"category": "widgets",
	"icon": "search",
	"description": "Add an elegant popup search interface to your site with customizable text and accessible design.",
	"keywords": [ "search", "modal", "popup" ],
	"example": {},
	"supports": {
		"html": false
	},
	"attributes": {
		"blockId": {
			"type": "string",
			"default": ""
		},
		"placeholderText": {
			"type": "string",
			"default": "Search..."
		},
		"buttonText": {
			"type": "string",
			"default": "Search"
		},
		"labelText": {
			"type": "string",
			"default": "Search for:"
		},
		"showLabel": {
			"type": "boolean",
			"default": false
		}
	},
	"textdomain": "search-modal-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}
